{
    "tags": {
        "allowUnknownTags": true
    },
    "markdown"  : {
        "parser"   : "gfm",
        "hardwrap" : true
    },
    "source": {
        "include": [
            "../../phaser/src/"
        ],
        "exclude": [
            "../../phaser/src/physics/matter-js/lib",
            "../../phaser/src/physics/matter-js/poly-decomp",
            "../../phaser/src/polyfills"
        ],
        "includePattern": ".+\\.js?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["../jsdoc-plugins/typedef"],
    "opts": {
        "debug": true,
        "template": "./bin/",
        "encoding": "utf8",
        "destination": "../typescript/",
        "outputSourceFiles": false,
        "outputSourcePath": true,
        "recurse": true,
        "private": false,
        "lenient": true,
        "sourceType": "script"
    }
}